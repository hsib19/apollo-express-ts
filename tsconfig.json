{
    "compilerOptions": {
        "outDir": "dist",
        "lib": [
            "es2020"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@config/*": ["src/config/*"],
            "@db/*": [
                "src/db/*"
            ],
            "@graphql": [
                "src/graphql/index.ts"
            ]
        },
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src",
        "tests"
    ]
}
